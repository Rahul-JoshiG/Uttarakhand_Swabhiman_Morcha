<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_180sdp"
    android:background="@color/md_theme_secondary"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    android:theme="@style/UttarakhandSwabhimanMorcha">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="@dimen/_10sdp"
        app:srcCompat="@drawable/ums_logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav_person_name"
        android:paddingTop="@dimen/_10sdp"
        android:text="Guest User"
        android:textColor="@color/md_theme_onSecondary"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/nav_person_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/md_theme_onSecondary"
        android:text="guestuser@gmail.com" />
</LinearLayout>